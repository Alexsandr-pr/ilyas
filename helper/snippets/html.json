			"   <meta http-equiv=\"X-UA-Compatible\" content=\"IE=edge\">",
			"   <!--Для SEO-->",
			"   <meta name=\"description\" content=\"описание до 140 символов.\">",
			"   <meta name=\"keywords\" content=\"теги - слова через запяиые, не больше 20 слов.\">",
