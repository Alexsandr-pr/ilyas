			"   <!--Запрет тндексации страницы полностью - <meta name=\"robots\" content=\"none\">-->",
			"   <!--Фиксированная ширина: ЕСЛИ АДАПТИВ НЕ НУЖЕН - <meta name=\"viewport\" content=\"width=1170\" > -->",
